<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controller.PayFeeController"
            prefWidth="350" prefHeight="260">

    <VBox spacing="15" alignment="CENTER_LEFT" layoutX="20" layoutY="20">

        <Label text="Pay Fee" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label fx:id="studentNameLabel" style="-fx-font-size: 14px;"/>

        <HBox spacing="10">
            <Label text="Amount:"/>
            <TextField fx:id="amountField" promptText="Enter amount"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Method:"/>
            <ComboBox fx:id="methodBox" prefWidth="150"/>
        </HBox>

        <Button text="Confirm Payment"
                onAction="#onConfirmPayment"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-padding: 7 20;"/>

    </VBox>

</AnchorPane>
