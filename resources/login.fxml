<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.LoginController"
            stylesheets="@style.css">

    <!-- TOP BLUE BAR -->
    <top>
        <HBox styleClass="top-bar">
            <Label text="School Fee Manager" styleClass="top-title"/>
        </HBox>
    </top>

    <!-- CENTER CARD -->
    <center>
        <VBox alignment="CENTER" styleClass="login-bg">
            <VBox spacing="15" styleClass="login-card">

                <Label text="Login" styleClass="login-title"/>

                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" promptText="Enter username"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

                <Button fx:id="loginButton" text="Login" onAction="#onLogin"
                        styleClass="primary-btn"/>

                <Label fx:id="messageLabel" text="" styleClass="message-label"/>
            </VBox>
        </VBox>
    </center>


</BorderPane>
